<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                    android:layout_height="wrap_content" android:layout_margin="16dp"
                                    app:cardBackgroundColor="@color/wifi">

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
                android:text="Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/wifi_name"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/wifi_frequency"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintEnd_toEndOf="parent" android:layout_margin="4dp"
                android:textColor="@color/primaryTextColor"/>
        <TextView
                android:text="Signal strength"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/wifi_frequency"
                app:layout_constraintTop_toBottomOf="@+id/wifi_name"
                app:layout_constraintBottom_toTopOf="@+id/wifi_estimatedDistance"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintEnd_toEndOf="parent" android:layout_margin="4dp"
                android:textColor="@color/primaryTextColor"/>
        <TextView
                android:text="Estimated distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/wifi_estimatedDistance"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/wifi_frequency"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
                android:layout_margin="4dp" android:textColor="@color/primaryTextColor"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@drawable/ic_wifi"
                android:id="@+id/imageView"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" android:tint="@color/primaryTextColor"
                android:layout_marginTop="4dp" android:layout_marginEnd="4dp"/>
    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>